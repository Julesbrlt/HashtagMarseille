<h1>Ajouter un projet</h1>
<%= simple_form_for(@project, html: { multipart: true, class: "card p-4 shadow-sm" }) do |f| %>
  <div class="mb-3">
    <%=
      f.input :name,
      label: "Nom du projet",
      input_html: { class: "form-control" },
      label_html: { class: "form-label fw-bold" }
    %>
  </div>

  <div class="mb-3">
    <%=
      f.input :description,
      as: :text,
      label: "Description",
      input_html: { rows: 5, class: "form-control" },
      label_html: { class: "form-label fw-bold" }
    %>
  </div>

  <div class="mb-3">
    <%=
      f.input :image,
      as: :file,
      label: "Image du projet",
      input_html: { class: "form-control", accept: "image/png,image/jpeg,image/jpg,image/webp" },
      label_html: { class: "form-label fw-bold" }
    %>

    <% if @project.image.attached? %>
      <div class="mt-2">
        <%=
          image_tag @project.image,
          class: "img-thumbnail",
          alt: @project.name
        %>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-between mt-4">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "Annuler", projects_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
