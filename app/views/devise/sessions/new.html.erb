<div class="login-page">
  <div class="login-card">
    <h2 class="login-title">Connexion</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%=
          f.input :email,
          required: false,
          autofocus: true,
          label: "Email",
          input_html: { autocomplete: "email", class: "form-control" }
        %>

        <%=
          f.input :password,
          required: false,
          label: "Mot de passe",
          input_html: { autocomplete: "current-password", class: "form-control" }
        %>

        <% if devise_mapping.rememberable? %>
          <div class="remember-me">
            <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" %>
          </div>
        <% end %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: "btn-connexion" %>
      </div>
    <% end %>
  </div>
</div>
